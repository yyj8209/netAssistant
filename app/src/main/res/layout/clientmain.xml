<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.assitant.MainActivity" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >



        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/id_mainbody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <!-- 1.IP 地址和其输入框 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/ip_add"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/id_edt_inputIP"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:hint="@string/ip" />
                </LinearLayout>
                <!-- 2.端口号和其输入框 -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/server_port"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/id_edt_inputport"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="@string/port" />
                </LinearLayout>
                <!-- 3.连接、关闭按钮和其指示灯. -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/id_btn_connClose"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="连接" />

                    
                </LinearLayout>

                   <ScrollView
                    android:id="@+id/ScrollView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical" >
           

                        <EditText
                            android:id="@+id/id_edt_jieshou"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scrollbars="vertical"
                            android:lines="8"
                            android:gravity="top"
                            android:hint="接收显示区" />
                    </LinearLayout>
                   </ScrollView>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/id_edt_sendArea"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="4.0"
                        android:focusable="true"
                        android:gravity="top"
                        android:hint="发送区"
                        android:minLines="3" >

                        <requestFocus />
                    </EditText>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/id_btn_send"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="发送" />
                         
                         <Button
                            android:id="@+id/id_btn_clean"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="清除" />

                    
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</TabHost>